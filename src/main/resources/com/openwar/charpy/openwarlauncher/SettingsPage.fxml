<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="10" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.openwar.charpy.openwarlauncher.controller.SettingsPageController">


    <Label text="Settings"/>

    <Label text="Allocated memory (GB):"/>
    <ComboBox fx:id="gbComboBox"/>

    <Label text="Game Width:"/>
    <TextField fx:id="widthField"/>

    <Label text="Game Height:"/>
    <TextField fx:id="heightField"/>
    <Button text="Save" fx:id="saveButton" onAction="#handleSave"/>
    <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancel"/>
</VBox>